<!--pages/myAddress/myAddress.wxml-->
<view>
  <view style="transform: translateX({{item.delFlag ? '-40vw' : '0'}})" bindtap="click" bindtouchstart="start" bindtouchmove="move" data-count="{{ index }}" class="item" wx:for="{{list}}" wx:key="item">
    <view class="states">
      {{ item.states == 1 ? '√' : '' }}
    </view>

    <view class="info">
      <view>
      {{ item.name }}
      </view>
      <view>
        {{ item.address }}
      </view>
    </view>
    <view catchtap="changeAddress" data-count="{{ index }}" class="change">修改</view>
    <view catchtap="delAddress" data-count="{{index}}" class="del">删除</view>
  </view>
  <view bindtap="addAddress" class="btn">
    <image class="img" src="/images/6.png"></image>
    <view class="huoqu" bindtap="add">新增地址</view>
    <image class="right" src="/images/right.png"></image>
  </view>
 </view>
    

